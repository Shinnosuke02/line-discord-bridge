# LINE-Discord Bridge Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# LINE BOT CONFIGURATION
# =============================================================================
# Get these from LINE Developers Console (https://developers.line.biz/)
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# =============================================================================
# DISCORD BOT CONFIGURATION
# =============================================================================
# Get these from Discord Developer Portal (https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Discord Category IDs (オプション)
# 空またはnullに設定するとカテゴリ割り当てが無効になります
DISCORD_CATEGORY_FRIENDS=your_friends_category_id_here
DISCORD_CATEGORY_GROUPS=your_groups_category_id_here

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_ENABLED=true
WEBHOOK_NAME=LINE Bridge
WEBHOOK_AVATAR_URL=https://example.com/avatar.png

# =============================================================================
# FILE PROCESSING SETTINGS
# =============================================================================
# LINE側の制限を考慮したファイルサイズ制限（LINE Bot API v7の制限に準拠）
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# メディア処理設定
IMAGE_RESIZE_ENABLED=true
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=80

VIDEO_COMPRESSION_ENABLED=false
VIDEO_MAX_SIZE=52428800

# =============================================================================
# CHANNEL SETTINGS
# =============================================================================
# チャンネル管理に関する設定
AUTO_CREATE_CHANNELS=true
CHANNEL_PREFIX=line-
MAX_CHANNELS=100

# =============================================================================
# ADVANCED SETTINGS (オプション)
# =============================================================================
# 以下の設定は通常デフォルト値で問題ありません
# 必要に応じて調整してください

# メッセージング処理設定
BATCH_DELAY=100
MAX_BATCH_SIZE=5
DOWNLOAD_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# ログ設定
LOG_CONSOLE=true
LOG_FILE=true
LOG_DIR=./logs
MAX_LOG_FILES=14
LOG_MAX_SIZE=20m
LOG_DATE_PATTERN=YYYY-MM-DD

# データベース設定（現在はファイルベース）
DB_TYPE=file
DB_PATH=./data
DB_MAX_MAPPINGS=10000
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400000

# セキュリティ設定
UPLOAD_API_KEY=your_secure_upload_api_key_here
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ENABLED=true
CORS_ORIGINS=*

# 監視・メトリクス設定
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000
